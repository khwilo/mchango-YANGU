<% @contributions.each do |contribution| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">

      <div id="image">
        <%= image_tag contribution.image.url(:medium) %>
      </div>
      
      <br>
      <h2>Description:</h2>
      <div id="contribution">
        <%= contribution.description %>
      </div>

      <br>
    
      <%= link_to '<button type="button">Donate</button>'.html_safe, donate_path %>
     
    </div>
  </div>
<% end %>
